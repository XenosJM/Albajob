<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.web.albajob.persistence.SearchMapper">

	<resultMap type="com.web.albajob.dimain.CityVO" id="cityResultMap">
		<id property="cityId" column="CITY_ID" />
		<result property="cityName" column="CITY_NAME" />
	</resultMap>
	
	<resultMap type="com.web.albajob.dimain.TownVO" id="townResultMap">
		<id property="cityId" column="CITY_ID" />
		<result property="townId" column="TOWN_ID" />
		<result property="townName" column="TOWN_NAME" />
	</resultMap>
	
	<resultMap type="com.web.albajob.dimain.VillageVO" id="villageResultMap">
		<id property="townId" column="TOWN_ID" />
		<result property="villageId" column="VILLAGE_ID" />
		<result property="villageName" column="VILLAGE_NAME" />
	</resultMap>
	
	<resultMap type="com.web.albajob.dimain.CategoryVO" id="categoryResultMap">
		<id property="categoryId" column="CATEGORY_ID" />
		<result property="categoryName" column="CATEGORY_NAME" />
	</resultMap>
	
	<resultMap type="com.web.albajob.dimain.JobVO" id="jobResultMap">
		<id property="categoryId" column="CATEGORY_ID" />
		<result property="jobId" column="JOB_ID" />
		<result property="jobName" column="JOB_NAME" />
	</resultMap>
	
	<select id="selectCity" resultMap="cityResultMap">
		SELECT * FROM CITY
	</select>
	
	<select id="selectTown" resultMap="townResultMap">
		SELECT * FROM TOWN
		WHERE CITY_ID = #{cityId}
	</select>
	
	<select id="selectVillage" resultMap="villageResultMap">
		SELECT * FROM VILLAGE
		WHERE TOWN_ID = #{townId}
	</select>
	
	<select id="selectCategory" resultMap="categoryResultMap">
		SELECT * FROM CATEGORY
	</select>
	
	<select id="selectJob" resultMap="jobResultMap">
		SELECT * FROM JOB
		WHERE CATEGORY_ID = #{categoryId}
	</select>
	
	
	
</mapper>